{
	"name": "@acme/ui",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"peerDependencies": {
		"svelte": "catalog:"
	},
	"exports": {
		".": {
			"types": "./src/index.d.ts"
		},
		"./TeamStatus": "./src/lib/components/TeamStatus/TeamStatus.svelte",
		"./Button": "./src/lib/components/ui/button/index.ts",
		"./Card": "./src/lib/components/ui/card/index.ts",
		"./Input": "./src/lib/components/ui/input/index.ts",
		"./Label": "./src/lib/components/ui/label/index.ts",
		"./utils": "./src/lib/utils/index.ts",
		"./default.css": "./src/lib/default.css"
	},
	"scripts": {
		"format": "pnpm -w exec prettier --write \"$PNPM_SCRIPT_SRC_DIR\"",
		"lint": "pnpm -w exec prettier --check \"$PNPM_SCRIPT_SRC_DIR\" ; pnpm -w exec eslint --format stylish --max-warnings 0 \"$PNPM_SCRIPT_SRC_DIR\"",
		"check": "pnpm -w exec svelte-check --workspace \"$PNPM_SCRIPT_SRC_DIR\" --tsconfig \"$PNPM_SCRIPT_SRC_DIR/tsconfig.json\"",
		"shad": "pnpm dlx shadcn-svelte@latest add --cwd \"$PNPM_SCRIPT_SRC_DIR\""
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tw-animate-css": "^1.3.8"
	},
	"devDependencies": {
		"@acme/state": "workspace:*",
		"@internationalized/date": "^3.10.1",
		"bits-ui": "^2.14.4",
		"shadcn-svelte": "catalog:",
		"svelte": "catalog:",
		"tailwindcss": "catalog:"
	}
}
